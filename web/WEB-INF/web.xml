<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>RegisterEmployeeController</servlet-name>
        <servlet-class>com.ems.controller.RegisterEmployeeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>com.ems.controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageEmployeeProfileController</servlet-name>
        <servlet-class>com.ems.controller.ManageEmployeeProfileController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageScheduleController</servlet-name>
        <servlet-class>com.ems.controller.ManageScheduleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewScheduleController</servlet-name>
        <servlet-class>com.ems.controller.ViewScheduleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RecordAttendanceController</servlet-name>
        <servlet-class>com.ems.controller.RecordAttendanceController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewAttendanceRecord</servlet-name>
        <servlet-class>com.ems.controller.ViewAttendanceRecord</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewEmployeeSalaryController</servlet-name>
        <servlet-class>com.ems.controller.ViewEmployeeSalaryController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewAttendanceController</servlet-name>
        <servlet-class>com.ems.controller.ViewAttendanceController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterEmployeeController</servlet-name>
        <url-pattern>/register_employee.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login_account.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageEmployeeProfileController</servlet-name>
        <url-pattern>/manage_employee.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageScheduleController</servlet-name>
        <url-pattern>/manage_schedule.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewScheduleController</servlet-name>
        <url-pattern>/view_schedule.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RecordAttendanceController</servlet-name>
        <url-pattern>/record_attendance.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewAttendanceRecord</servlet-name>
        <url-pattern>/attendance_record.view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewEmployeeSalaryController</servlet-name>
        <url-pattern>/employee_salary.view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewAttendanceController</servlet-name>
        <url-pattern>/attendance.view</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>welcome.html</welcome-file>
    </welcome-file-list>
</web-app>
